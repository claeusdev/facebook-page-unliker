<div class="row">
  <div class="col-sm-8">
    <ul id="user-likes" class="like-class">
      {{#each item in pages}}
        <li class="like-item">

          <div class="row">
            <div class="page-section col-sm-12">
              <span class="page-name"><a target="_blank" {{bind-attr href=item.link}}>{{item.name}}</a></span>
              <span class="page-date">{{formatted-date item.created_time 'LL'}}</span>
            </div>
          </div>



          <div class="talking-section">
            <span class="bolded">{{item.talking_about_count}}</span> people talking about it.
          </div>

          <div class="like-button">
            Unlike: <iframe src={{item.buttonURL}}  scrolling="no" frameborder="0" style="border:none; overflow:hidden; width: 47px; height:20px;" allowTransparency="true"></iframe>

           {{!--  <div class="fb-like" {{bind-attr data-href=item.link}} data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div> <br> --}}
          </div>


        </li>

        <hr>

      {{else}}
        <span class="bolded">Finished loading items!!</span>
      {{/each}}
    </ul>

  </div>
</div>

